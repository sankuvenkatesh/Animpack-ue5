bl_info = {
    "name": "Delete/Bake Keyframe by Interval Extended",
    "author": "Venkatesh Sanku",
    "version": (4, 4, 0),  # Updated version
    "blender": (5, 0, 0),
    "location": "View3D > Sidebar > Animation",
    "description": "Delete/bake keyframes by interval - FIXED INVERT & SELECTION",
    "category": "Animation",
}

import bpy

class DeleteKeyframeProperties(bpy.types.PropertyGroup):
    start_frame: bpy.props.IntProperty(
        name="Start Frame", default=0, min=0,
        description="First frame to consider",
        update=lambda self, context: self.update_preview()
    )
    end_frame: bpy.props.IntProperty(
        name="End Frame", default=100, min=0,
        description="Last frame (inclusive)",
        update=lambda self, context: self.update_preview()
    )
    interval: bpy.props.IntProperty(
        name="Interval", default=1, min=1, max=100,
        description="Every nth frame (1=every frame, 2=every 2nd frame, etc.)",
        update=lambda self, context: self.update_preview()
    )
    invert: bpy.props.BoolProperty(
        name="Invert", default=False,
        description="OFF: Delete interval frames | ON: Delete ALL OTHER frames",
        update=lambda self, context: self.update_preview()
    )

    all_types: bpy.props.BoolProperty(
        name="ALL Properties", default=True,
        description="Location, Rotation, Scale, Custom properties",
        update=lambda self, context: self._update_all_types()
    )

    only_selected: bpy.props.BoolProperty(
        name="Only Selected", default=False,
        description="OFF: All bones/objects | ON: Only selected bones/objects",
        update=lambda self, context: self.update_preview()
    )

    pos: bpy.props.BoolProperty(name="Location", default=True)
    rot: bpy.props.BoolProperty(name="Rotation", default=True)
    scl: bpy.props.BoolProperty(name="Scale", default=True)
    custom: bpy.props.BoolProperty(name="Custom Props", default=True)
    
    preview_count: bpy.props.IntProperty(default=0, options={'HIDDEN'})

    def update_preview(self):
        frames = calculate_frames(self)
        self.preview_count = len(frames)

    def _update_all_types(self):
        if self.all_types:
            self.pos = self.rot = self.scl = self.custom = True

def calculate_frames(props):
    """âœ… FIXED: Clear invert logic with debug info"""
    start, end, interval, invert = props.start_frame, props.end_frame, props.interval, props.invert
    
    if end < start or interval < 1:
        return []
    
    all_frames = list(range(start, end + 1))
    interval_frames = [f for idx, f in enumerate(all_frames) if (idx % interval) == 0]
    
    if invert:
        # INVERT ON: Delete ALL frames EXCEPT interval frames (keep interval frames)
        result = [f for f in all_frames if f not in interval_frames]
        print(f"ðŸ”„ INVERT ON: Delete {len(result)} frames (keep {len(interval_frames)})")
    else:
        # INVERT OFF: Delete ONLY interval frames (keep others)
        result = interval_frames
        print(f"ðŸ”„ INVERT OFF: Delete {len(result)} interval frames")
    
    return result

def get_targets(context, only_selected):
    """âœ… FIXED: Proper target selection for ALL modes"""
    mode = context.mode
    
    if mode == 'POSE':
        arm = context.object
        if arm and arm.type == 'ARMATURE':
            if only_selected:
                return list(context.selected_pose_bones)  # Only selected bones
            else:
                return list(arm.pose.bones)  # All pose bones
    
    # Object modes (OBJECT, EDIT, etc.)
    if only_selected:
        return list(context.selected_objects)  # Only selected objects
    else:
        return list(context.scene.objects)  # All scene objects

def delete_pose_bone_exact(pbone, frames, props):
    deleted = 0
    for frame in frames:
        if props.all_types or props.pos:
            for i in range(3):  # Location XYZ
                try: pbone.keyframe_delete("location", frame=frame, index=i); deleted += 1
                except: pass
        if props.all_types or props.rot:
            if pbone.rotation_mode == 'QUATERNION':
                for i in range(4):  # Quat WXYZ
                    try: pbone.keyframe_delete("rotation_quaternion", frame=frame, index=i); deleted += 1
                    except: pass
            else:
                for i in frames range(3):  # Euler XYZ
                    try: pbone.keyframe_delete("rotation_euler", frame=frame, index=i); deleted += 1
                    except: pass
        if props.all_types or props.scl:
            for i in range(3):  # Scale XYZ
                try: pbone.keyframe_delete("scale", frame=frame, index=i); deleted += 1
                except: pass
    print(f"âœ… POSE '{pbone.name}': {deleted} keys")
    return deleted

def delete_object_exact(obj, frames, props):
    deleted = 0
    for frame in frames:
        if props.all_types or props.pos:
            for i in range(3):
                try: obj.keyframe_delete("location", frame=frame, index=i); deleted += 1
                except: pass
        if props.all_types or props.rot:
            if obj.rotation_mode == 'QUATERNION':
                for i in range(4):
                    try: obj.keyframe_delete("rotation_quaternion", frame=frame, index=i); deleted += 1
                    except: pass
            else:
                for i in range(3):
                    try: obj.keyframe_delete("rotation_euler", frame=frame, index=i); deleted += 1
                    except: pass
        if props.all_types or props.scl:
            for i in range(3):
                try: obj.keyframe_delete("scale", frame=frame, index=i); deleted += 1
                except: pass
    print(f"âœ… OBJ '{obj.name}': {deleted} keys")
    return deleted

class DeleteKeyframeOperator(bpy.types.Operator):
    bl_idname = "object.delete_keyframe_by_interval"
    bl_label = "Delete Keyframes"
    bl_options = {'REGISTER', 'UNDO'}

    def execute(self, context):
        props = context.scene.del_keyframe_props
        frames = calculate_frames(props)
        targets = get_targets(context, props.only_selected)

        if not frames:
            self.report({'WARNING'}, "No frames to process!")
            return {'CANCELLED'}
        if not targets:
            self.report({'WARNING'}, "No targets found!")
            return {'CANCELLED'}

        scene = context.scene
        original_frame = scene.frame_current
        total_deleted = 0
        mode_name = "POSE" if context.mode == 'POSE' else "OBJECT"
        sel_text = "SELECTED" if props.only_selected else "ALL"

        print(f"
ðŸš€ DELETE: {mode_name} {sel_text} | {len(targets)} targets | {len(frames)} frames")

        for target in targets:
            try:
                if context.mode == 'POSE':
                    deleted = delete_pose_bone_exact(target, frames, props)
                else:
                    deleted = delete_object_exact(target, frames, props)
                total_deleted += deleted
            except Exception as e:
                print(f"âŒ {getattr(target, 'name', 'unknown')}: {e}")

        scene.frame_set(original_frame)
        context.view_layer.update()
        
        for area in context.screen.areas:
            if area.type in {'VIEW_3D', 'GRAPH_EDITOR', 'DOPESHEET_EDITOR', 'TIMELINE'}:
                area.tag_redraw()

        self.report({'INFO'}, f"Deleted {total_deleted} keyframes ({len(targets)} {mode_name.lower()})")
        return {'FINISHED'}

class BakeKeyframeOperator(bpy.types.Operator):
    bl_idname = "object.bake_keyframe_by_interval"
    bl_label = "Bake Keyframes"
    bl_options = {'REGISTER', 'UNDO'}

    def execute(self, context):
        props = context.scene.del_keyframe_props
        frames = calculate_frames(props)
        targets = get_targets(context, props.only_selected)

        if not frames or not targets:
            self.report({'WARNING'}, "No frames or targets!")
            return {'CANCELLED'}

        scene = context.scene
        original_frame = scene.frame_current
        baked_count = 0
        sel_text = "SELECTED" if props.only_selected else "ALL"

        print(f"
ðŸš€ BAKE: {len(targets)} targets | {len(frames)} frames | {sel_text}")

        for target in targets:
            for f in frames:
                scene.frame_set(f)
                context.view_layer.update()
                try:
                    if props.all_types or props.pos:
                        target.keyframe_insert("location"); baked_count += 1
                    if props.all_types or props.rot:
                        target.keyframe_insert("rotation_quaternion" if target.rotation_mode == 'QUATERNION' else "rotation_euler"); baked_count += 1
                    if props.all_types or props.scl:
                        target.keyframe_insert("scale"); baked_count += 1
                except:
                    pass

        scene.frame_set(original_frame)
        context.view_layer.update()
        self.report({'INFO'}, f"Baked {baked_count} keyframes")
        return {'FINISHED'}

class DeleteBakeKeyframePanel(bpy.types.Panel):
    bl_label = "ðŸ”§ Delete/Bake Keyframe Interval"
    bl_space_type = 'VIEW_3D'
    bl_region_type = 'UI'
    bl_category = 'Animation'
    bl_options = {'DEFAULT_CLOSED'}

    def draw(self, context):
        layout = self.layout
        props = context.scene.del_keyframe_props

        # Frame Range
        box = layout.box()
        box.prop(props, "start_frame")
        box.prop(props, "end_frame")
        box.prop(props, "interval")
        box.prop(props, "invert")

        # Target Selection
        box = layout.box()
        box.label(text="ðŸŽ¯ Targets", icon='OBJECT_DATA')
        box.prop(props, "only_selected")
        box.prop(props, "all_types")

        # Property Types
        box = layout.box()
        box.label(text="âš™ï¸ Properties", icon='DRIVER')
        row1 = box.row(align=True)
        row1.enabled = not props.all_types
        row1.prop(props, "pos")
        row1.prop(props, "rot")
        row2 = box.row(align=True)
        row2.enabled = not props.all_types
        row2.prop(props, "scl")
        row2.prop(props, "custom")

        # Preview
        preview_box = layout.box()
        frames = calculate_frames(props)
        invert_text = "ðŸŸ¢ KEEP INTERVAL" if props.invert else "ðŸ”´ DELETE INTERVAL"
        preview_box.label(text=f"ðŸ“Š {invert_text}: {len(frames)} frames", icon='INFO')

        # Buttons
        row = layout.row(align=True)
        row.scale_y = 1.6
        row.operator("object.delete_keyframe_by_interval", icon='TRASH', text="ðŸ—‘ï¸ DELETE")
        row.operator("object.bake_keyframe_by_interval", icon='KEY_HLT', text="ðŸ”¥ BAKE")

classes = (
    DeleteKeyframeProperties,
    DeleteKeyframeOperator,
    BakeKeyframeOperator,
    DeleteBakeKeyframePanel,
)

def register():
    for cls in classes:
        bpy.utils.register_class(cls)
    bpy.types.Scene.del_keyframe_props = bpy.props.PointerProperty(type=DeleteKeyframeProperties)

def unregister():
    for cls in reversed(classes):
        bpy.utils.unregister_class(cls)
    del bpy.types.Scene.del_keyframe_props

if __name__ == "__main__":
    register()
