bl_info = {
    "name": "Delete/Bake Keyframe by Interval Extended",
    "author": "Venkatesh Sanku",
    "version": (1, 6, 11),
    "blender": (4, 2, 0),  # Compatible with Blender 5.0+
    "location": "View3D > Sidebar > Animation",
    "description": "Delete/bake keyframes by interval with selected-only mode and live UI preview. FIXED: PoseBone attribute errors + Blender 5.0 compatible.",
    "category": "Animation",
}

import bpy

class DeleteKeyframeProperties(bpy.types.PropertyGroup):
    start_frame: bpy.props.IntProperty(
        name="Start Frame", default=0, min=0,
        description="First frame to consider",
        update=lambda self, context: self.update_preview()
    )
    end_frame: bpy.props.IntProperty(
        name="End Frame", default=100, min=0,
        description="Last frame (inclusive)",
        update=lambda self, context: self.update_preview()
    )
    interval: bpy.props.IntProperty(
        name="Interval", default=1, min=1, max=100,
        description="Every nth frame for delete/bake",
        update=lambda self, context: self.update_preview()
    )
    invert: bpy.props.BoolProperty(
        name="Invert", default=False,
        description="Invert: delete/bake at interval instead of skipping",
        update=lambda self, context: self.update_preview()
    )

    all_types: bpy.props.BoolProperty(
        name="ALL (Full Key)", default=True,
        description="Key/delete Location, Rotation, Scale, Custom, and all other keyable properties",
        update=lambda self, context: self._update_all_types()
    )

    only_selected: bpy.props.BoolProperty(
        name="Only Selected Bones/Objects", default=False,
        description="Affect ONLY currently selected bones/objects (ignore others)"
    )

    pos: bpy.props.BoolProperty(
        name="Location", default=True,
        description="Affect Location"
    )
    rot: bpy.props.BoolProperty(
        name="Rotation", default=True,
        description="Affect Rotation"
    )
    scl: bpy.props.BoolProperty(
        name="Scale", default=True,
        description="Affect Scale"
    )
    custom: bpy.props.BoolProperty(
        name="Custom Properties", default=True,
        description="Affect Custom Property keyframes"
    )
    preview_count: bpy.props.IntProperty(
        name="Frames to be affected", default=0, options={'HIDDEN'}
    )

    def update_preview(self):
        frames = calculate_frames(self)
        self.preview_count = len(frames)

    def _update_all_types(self):
        if self.all_types:
            self.pos = True
            self.rot = True
            self.scl = True
            self.custom = True

def calculate_frames(props):
    start, end, interval, invert = props.start_frame, props.end_frame, props.interval, props.invert
    if end < start or interval < 1:
        return []
    all_frames = list(range(start, end + 1))
    select_frames = [f for idx, f in enumerate(all_frames) if (idx % interval) == 0]
    if invert:
        return select_frames
    return [f for f in all_frames if f not in select_frames]

def get_selected_objects_or_bones(context):
    """Proper PoseBone selection detection - Blender 5.0 compatible"""
    if context.mode == 'POSE' and context.object and context.object.type == 'ARMATURE':
        armature = context.object
        return [pb for pb in armature.pose.bones if pb.bone.select]
    return context.selected_objects

def delete_keyframes_pose_bone(pose_bone, frame, props):
    """Safe PoseBone keyframe deletion - no attribute errors"""
    try:
        deleted = 0
        
        # Location
        if (props.all_types or props.pos) and hasattr(pose_bone, 'location'):
            pose_bone.keyframe_delete(data_path="location", frame=frame, index=-1)
            deleted += 1
        
        # Rotation - handles both Euler and Quaternion
        if props.all_types or props.rot:
            if hasattr(pose_bone, 'rotation_euler'):
                pose_bone.keyframe_delete(data_path="rotation_euler", frame=frame, index=-1)
                deleted += 1
            if hasattr(pose_bone, 'rotation_quaternion'):
                pose_bone.keyframe_delete(data_path="rotation_quaternion", frame=frame, index=-1)
                deleted += 1
        
        # Scale
        if (props.all_types or props.scl) and hasattr(pose_bone, 'scale'):
            pose_bone.keyframe_delete(data_path="scale", frame=frame, index=-1)
            deleted += 1
            
        return deleted
    except Exception as e:
        print(f"‚ùå PoseBone delete error: {e}")
        return 0

def delete_keyframes_interval_robust(targets, frames, props, context):
    """Handles both PoseBones and Objects without errors - Blender 5.0 safe"""
    deleted_count = 0
    
    for target in targets:
        if context.mode == 'POSE' and hasattr(target, 'bone'):  # PoseBone
            pose_bone = target
            obj = pose_bone.id_data
        else:  # Object
            pose_bone = None
            obj = target
        
        if not obj.animation_data or not obj.animation_data.action:
            continue
            
        print(f"üéØ Processing {obj.name}{' (PoseBone)' if pose_bone else ''}")
        
        for frame in frames:
            try:
                if pose_bone:
                    # PoseBone deletion
                    deleted = delete_keyframes_pose_bone(pose_bone, frame, props)
                    deleted_count += deleted
                    if deleted > 0:
                        print(f"   Frame {frame}: ‚úÖ DELETED {deleted} props (PoseBone)")
                else:
                    # Object deletion
                    obj.keyframe_delete(data_path="location", frame=frame, index=-1)
                    obj.keyframe_delete(data_path="rotation_euler", frame=frame, index=-1)
                    obj.keyframe_delete(data_path="rotation_quaternion", frame=frame, index=-1)
                    obj.keyframe_delete(data_path="scale", frame=frame, index=-1)
                    deleted_count += 4
                    print(f"   Frame {frame}: ‚úÖ DELETED (Object)")
            except Exception as e:
                print(f"   Frame {frame}: ‚ùå {e}")
    
    return deleted_count

def bake_keyframes_pose_bone(pose_bone, frame, props):
    """Safe PoseBone keyframe insertion"""
    try:
        baked = 0
        
        # Location
        if (props.all_types or props.pos) and hasattr(pose_bone, 'location'):
            pose_bone.keyframe_insert(data_path="location", frame=frame)
            baked += 1
        
        # Rotation
        if props.all_types or props.rot:
            if hasattr(pose_bone, 'rotation_euler'):
                pose_bone.keyframe_insert(data_path="rotation_euler", frame=frame)
                baked += 1
            if hasattr(pose_bone, 'rotation_quaternion'):
                pose_bone.keyframe_insert(data_path="rotation_quaternion", frame=frame)
                baked += 1
        
        # Scale
        if (props.all_types or props.scl) and hasattr(pose_bone, 'scale'):
            pose_bone.keyframe_insert(data_path="scale", frame=frame)
            baked += 1
            
        return baked
    except Exception as e:
        print(f"‚ùå PoseBone bake error: {e}")
        return 0

class DeleteKeyframeOperator(bpy.types.Operator):
    bl_idname = "object.delete_keyframe_by_interval"
    bl_label = "Delete Keyframes"
    bl_options = {'REGISTER', 'UNDO'}

    def execute(self, context):
        props = context.scene.del_keyframe_props
        frames = calculate_frames(props)
        targets = get_selected_objects_or_bones(context) if props.only_selected else context.selected_objects
        
        print(f"üîç INTERVAL: Start={props.start_frame}, End={props.end_frame}, Interval={props.interval}, Invert={props.invert}")
        print(f"üîç TARGETS: {len(targets)} ({'Pose' if context.mode == 'POSE' else 'Object'})")
        print(f"üîç FRAMES: {frames}")
        
        deleted_count = delete_keyframes_interval_robust(targets, frames, props, context)
        
        # FORCE UPDATE - Blender 5.0 compatible
        context.view_layer.update()
        if context.mode == 'POSE':
            bpy.ops.pose.transforms_clear(only_values=False)
        context.view_layer.depsgraph.update()
        
        mode_text = "pose bones" if context.mode == 'POSE' else "objects"
        self.report({'INFO'}, f"‚úÖ DELETED {deleted_count} keyframes from {len(targets)} {mode_text}")
        return {'FINISHED'}

class BakeKeyframeOperator(bpy.types.Operator):
    bl_idname = "object.bake_keyframe_by_interval"
    bl_label = "Bake Keyframes"
    bl_options = {'REGISTER', 'UNDO'}

    def execute(self, context):
        props = context.scene.del_keyframe_props
        frames = calculate_frames(props)
        targets = get_selected_objects_or_bones(context) if props.only_selected else context.selected_objects

        scene = context.scene
        original_frame = scene.frame_current
        baked_count = 0

        for target in targets:
            if context.mode == 'POSE' and hasattr(target, 'bone'):  # PoseBone
                pose_bone = target
            else:
                pose_bone = None
            
            for f in frames:
                scene.frame_set(f)
                context.view_layer.update()
                
                try:
                    if pose_bone:
                        baked = bake_keyframes_pose_bone(pose_bone, f, props)
                        baked_count += baked
                    else:
                        obj = target
                        if props.all_types or props.pos:
                            obj.keyframe_insert(data_path="location", frame=f)
                        if props.all_types or props.rot:
                            rot_mode = getattr(obj, 'rotation_mode', None)
                            if rot_mode == 'QUATERNION':
                                obj.keyframe_insert(data_path="rotation_quaternion", frame=f)
                            else:
                                obj.keyframe_insert(data_path="rotation_euler", frame=f)
                        if props.all_types or props.scl:
                            obj.keyframe_insert(data_path="scale", frame=f)
                        baked_count += 3
                except Exception as e:
                    print(f"Bake error frame {f}: {e}")

        scene.frame_set(original_frame)
        context.view_layer.update()
        context.view_layer.depsgraph.update()
        self.report({'INFO'}, f"‚úÖ BAKED {baked_count} keyframes")
        return {'FINISHED'}

class DeleteBakeKeyframePanel(bpy.types.Panel):
    bl_label = "üîß Delete/Bake Keyframe By Interval"
    bl_space_type = 'VIEW_3D'
    bl_region_type = 'UI'
    bl_category = 'Animation'
    bl_options = {'DEFAULT_CLOSED'}

    def draw(self, context):
        layout = self.layout
        props = context.scene.del_keyframe_props

        col = layout.column(align=True)
        box = col.box()
        box.prop(props, "start_frame")
        box.prop(props, "end_frame")
        box.prop(props, "interval")
        box.prop(props, "invert")

        box = col.box()
        box.label(text="üéØ Target Selection")
        box.prop(props, "only_selected")
        box.prop(props, "all_types")

        box = col.box()
        box.label(text="‚öôÔ∏è Property Types")
        row1 = box.row(align=True)
        row1.enabled = not props.all_types
        row1.prop(props, "pos")
        row1.prop(props, "rot")
        
        row2 = box.row(align=True)
        row2.enabled = not props.all_types
        row2.prop(props, "scl")
        row2.prop(props, "custom")

        preview_box = col.box()
        preview_box.scale_y = 1.2
        frames_preview = calculate_frames(props)
        preview_box.label(text=f"üìä Preview: {len(frames_preview)} frames", icon='INFO')

        row = col.row(align=True)
        row.scale_y = 1.5
        row.operator("object.delete_keyframe_by_interval", icon='TRASH', text="üóëÔ∏è Delete")
        row.operator("object.bake_keyframe_by_interval", icon='KEY_HLT', text="üî• Bake")

classes = (
    DeleteKeyframeProperties,
    DeleteKeyframeOperator,
    BakeKeyframeOperator,
    DeleteBakeKeyframePanel,
)

def register():
    for cls in classes:
        bpy.utils.register_class(cls)
    bpy.types.Scene.del_keyframe_props = bpy.props.PointerProperty(type=DeleteKeyframeProperties)

def unregister():
    for cls in reversed(classes):
        bpy.utils.unregister_class(cls)
    del bpy.types.Scene.del_keyframe_props

if __name__ == "__main__":
    register()
