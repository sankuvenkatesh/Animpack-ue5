bl_info = {
    "name": "Smart Euler Filter",
    "author": "Venkatesh Sanku",
    "version": (1, 6),
    "blender": (2, 80, 0),
    "location": "Graph Editor > Sidebar > Rotation Continuity Tab",
    "description": "Unwrap/smooth selected Euler or Quaternion rotation f-curves for objects or pose bones, preserving handles. Works with any number of selected channels.",
    "category": "Animation"
}

import bpy
import math
from mathutils import Euler, Quaternion

# ------ Utility Functions ------

def nearest_equivalent_euler(a1, a2):
    twopi = 2 * math.pi
    while a2 - a1 > math.pi:
        a2 -= twopi
    while a2 - a1 < -math.pi:
        a2 += twopi
    return a2

def find_datapath_entity(context):
    """Returns (entity, rotation_mode) for object or pose bone, and its RNA path, given the Graph Editor context."""
    obj = context.active_object
    if not obj or not obj.animation_data or not obj.animation_data.action:
        return None, None, None

    # Determine if we're dealing with a bone
    for area in context.screen.areas:
        if area.type == "DOPESHEET_EDITOR" or area.type == "GRAPH_EDITOR":
            space = area.spaces.active
            if hasattr(space, "mode") and space.mode == 'POSE':
                # Look for selected pose bone
                # Try context.active_pose_bone (Blender 2.8+) for armature pose
                bone = getattr(context, "active_pose_bone", None)
                if bone:
                    path = 'pose.bones["%s"]' % bone.name
                    return bone, bone.rotation_mode, path
    # Otherwise, use object
    return obj, obj.rotation_mode, ""  # path is "" for object

def get_selected_rotation_fcurves(context, mode_code, entity_rnapath):
    obj = context.active_object
    if not obj or not obj.animation_data or not obj.animation_data.action:
        return None, "No animated object or bone with keyframes selected."
    suffix = "rotation_euler" if mode_code == "EULER" else "rotation_quaternion"
    all_fcurves = obj.animation_data.action.fcurves
    # If bone, matcher requires prefix
    if entity_rnapath:
        selected_fcurves = [
            fc for fc in all_fcurves
            if fc.select and fc.data_path.startswith(entity_rnapath) and fc.data_path.endswith(suffix)
        ]
    else:
        selected_fcurves = [
            fc for fc in all_fcurves
            if fc.select and fc.data_path == suffix
        ]
    if not selected_fcurves:
        return None, f"No selected {suffix} f-curves found for active object/bone."
    selected_fcurves.sort(key=lambda fc: fc.array_index)
    return selected_fcurves, None

def get_fcurve_keyframe_map(fcurve):
    return {int(round(kp.co[0])): kp for kp in fcurve.keyframe_points}

def collect_keyframes_with_handles(curves):
    axis_keyframes = [get_fcurve_keyframe_map(fc) for fc in curves]
    frames = sorted({f for mapping in axis_keyframes for f in mapping})
    keyframe_info = []
    for f in frames:
        kps = [mapping.get(f) for mapping in axis_keyframes]
        if all(kps):
            value = [kp.co[1] for kp in kps]
            handles = [{
                'handle_left_type': kp.handle_left_type,
                'handle_right_type': kp.handle_right_type,
                'handle_left': kp.handle_left.copy(),
                'handle_right': kp.handle_right.copy(),
            } for kp in kps]
            keyframe_info.append({
                'frame': f,
                'value': value,
                'handles': handles,
            })
    return keyframe_info

def unwrap_keyframe_values_euler(keyframes):
    out = []
    prev = None
    for info in keyframes:
        e = info['value']
        if prev is None:
            fixed = list(e)
        else:
            fixed = [nearest_equivalent_euler(prev[i], e[i]) for i in range(len(e))]
        out.append({
            'frame': info['frame'],
            'value': fixed,
            'handles': info['handles'],
        })
        prev = fixed
    return out

def unwrap_keyframe_values_quaternion(keyframes):
    out = []
    prev = None
    for info in keyframes:
        v = info['value']
        # If 4 channels, treat as Quaternion; otherwise, smooth each channel
        if len(v) == 4:
            q = Quaternion(v)
            if prev is not None and prev.dot(q) < 0.0:
                q = -q
            values = [q.w, q.x, q.y, q.z]
            prev = Quaternion(q)
        else:
            values = v if prev is None else [
                -v[i] if abs(v[i] + prev[i]) < abs(v[i] - prev[i]) else v[i]
                for i in range(len(v))
            ]
            prev = values
        out.append({
            'frame': info['frame'],
            'value': values,
            'handles': info['handles'],
        })
    return out

def preserve_and_update_fcurve_points(curves, keyframe_infos):
    for axis, fc in enumerate(curves):
        frame_map = get_fcurve_keyframe_map(fc)
        for info in keyframe_infos:
            f = info['frame']
            v = info['value'][axis]
            kph = info['handles'][axis]
            kp = frame_map.get(f)
            if kp:
                kp.co[1] = v
                kp.handle_left_type = kph['handle_left_type']
                kp.handle_right_type = kph['handle_right_type']
                kp.handle_left = kph['handle_left']
                kp.handle_right = kph['handle_right']
        fc.update()

# ------ Main Operator ------

class ROTATION_OT_preserve_continuity_partial(bpy.types.Operator):
    """Unwraps/smooths selected Euler or Quaternion rotation channels for objects or bones. Handles preserved."""
    bl_idname = "graph.rotation_continuity_partial"
    bl_label = "Preserve Rotation Continuity"
    bl_options = {'REGISTER', 'UNDO'}

    def execute(self, context):
        entity, rot_mode, rna_path = find_datapath_entity(context)
        if not entity:
            self.report({'ERROR'}, "No active object or pose bone found.")
            return {'CANCELLED'}

        if rot_mode == "QUATERNION":
            mode_code = "QUATERNION"
        elif rot_mode in {"XYZ", "XZY", "YXZ", "YZX", "ZXY", "ZYX"}:
            mode_code = "EULER"
        else:
            self.report({'ERROR'}, f"Unsupported rotation mode: {rot_mode}")
            return {'CANCELLED'}

        selected_fcurves, err = get_selected_rotation_fcurves(context, mode_code, rna_path)
        if selected_fcurves is None:
            self.report({'ERROR'}, err)
            return {'CANCELLED'}

        keyframes = collect_keyframes_with_handles(selected_fcurves)
        if not keyframes:
            self.report({'ERROR'}, "No matching keyframes found on all selected channels.")
            return {'CANCELLED'}

        if mode_code == "EULER":
            unwrapped = unwrap_keyframe_values_euler(keyframes)
        else:
            unwrapped = unwrap_keyframe_values_quaternion(keyframes)

        preserve_and_update_fcurve_points(selected_fcurves, unwrapped)
        context.area.tag_redraw()

        self.report({'INFO'}, f"{mode_code} continuity applied to {len(selected_fcurves)} selected channel(s) of {'bone' if rna_path else 'object'}.")
        return {'FINISHED'}

# ------ Panel ------

class ROTATION_PT_continuity_panel(bpy.types.Panel):
    bl_label = "Rotation Continuity"
    bl_space_type = 'GRAPH_EDITOR'
    bl_region_type = 'UI'
    bl_category = "Rotation"

    def draw(self, context):
        layout = self.layout
        col = layout.column(align=True)
        col.label(text="Preserve/correct continuity (Euler or Quaternion):")
        col.operator("graph.rotation_continuity_partial", icon='CON_ROTLIKE')
        col.label(text="Handles/tangents are always preserved.")
        col.label(text="Supports objects and pose bones.")

# ------ Registration ------

classes = [
    ROTATION_OT_preserve_continuity_partial,
    ROTATION_PT_continuity_panel,
]

def register():
    for cls in classes:
        bpy.utils.register_class(cls)
def unregister():
    for cls in classes:
        bpy.utils.unregister_class(cls)
if __name__ == "__main__":
    register()
